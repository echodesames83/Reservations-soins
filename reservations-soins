const semaines = Object.keys(places);

semaines.forEach(s => {
  ['rituel', 'intuitif', 'habitat', 'pack'].forEach(type => {
    const opt = document.createElement('option');
    opt.value = s;
    opt.textContent = s;
    document.getElementById('semaine-' + type).appendChild(opt);
  });
});

function toggle(id) {
  document.querySelectorAll('.details').forEach(d => d.classList.remove('open'));
  document.querySelectorAll('.soin').forEach(s => s.classList.remove('open'));
  const details = document.getElementById(id);
  const soin = details.previousElementSibling;
  details.classList.toggle('open');
  soin.classList.toggle('open');
}

function envoyer(type) {
  const nom = document.getElementById('nom-' + type).value.trim();
  const prenom = document.getElementById('prenom-' + type).value.trim();
  const mail = document.getElementById('mail-' + type).value.trim();
  const semaine = document.getElementById('semaine-' + type).value;

  if (!nom || !prenom || !mail || !semaine) {
    alert("Veuillez remplir tous les champs obligatoires : nom, pr√©nom, mail et semaine.");
    return;
  }

  if (places[semaine][type] <= 0) {
    alert("Plus de place pour ce soin cette semaine.");
    return;
  }

  // D√©cr√©mente les places localement (affichage)
  places[semaine][type]--;
  if (places[semaine][type] <= 0) {
    const soinElement = document.querySelector(`.soin[onclick="toggle('${type}')"]`);
    if (soinElement) soinElement.classList.add('indisponible');
  }

  alert(`R√©serv√© !\n\nMerci ${prenom} ${nom}.\n\n${type.charAt(0).toUpperCase() + type.slice(1)}\nSemaine : ${semaine}\n\nTu vas recevoir un mail de confirmation. Merci pour ta confiance ‚ô°`);
}
